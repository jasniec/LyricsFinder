<UserControl x:Class="LyricsFinder.Core.Controls.MarqueeTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LyricsFinder.Core"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" >
    <Grid Height="40">
        <Canvas Name="canMain">
            <Canvas Height="40" ClipToBounds="True" Name="canHolder" >
                <TextBlock Foreground="{x:Static local:ColorPalette.FontBrush}" FontSize="25" Name="textBlock" Padding="0, 0, 20, 0" />
                <TextBlock Foreground="{x:Static local:ColorPalette.FontBrush}" FontSize="25" Name="textBlockSecond" Padding="0, 0, 20, 0" />
            </Canvas>
        </Canvas>
    </Grid>
</UserControl>
